<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:textSize="24sp"
        tools:text="Fast &amp; Furious Presents: Hobbs &amp; Shaw" />

    <TextView
        android:id="@+id/tvOverView"
        android:layout_width="285dp"
        android:layout_height="65dp"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivPoster"
        tools:text="A spinoff of The Fate of the Furious, fousing on Johnson's US Diplomatic Security Agent Luke Hobbs forming an unlikely alliance with Statham's Deckard Shaw." />
</RelativeLayout>